@model JobBoardPlatform.Models.ApplyViewModel
@{
    ViewBag.Title = "Upload Resume";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen flex items-center justify-center p-4 bg-gray-50">
    <div class="w-full max-w-md bg-white rounded-xl shadow-lg overflow-hidden" data-aos="fade-up">
        <div class="bg-indigo-600 py-4 px-6">
            <h1 class="text-2xl font-bold text-white flex items-center gap-2">
                <i data-feather="briefcase" class="w-6 h-6"></i>
                Apply for Job
            </h1>
        </div>

        @using (Html.BeginForm("Apply", "JobSeeker", FormMethod.Post, new { enctype = "multipart/form-data", @class = "p-6 space-y-6" }))
        {
            @Html.HiddenFor(m => m.JobId)

            <div class="space-y-2">
                <label class="block text-sm font-medium text-gray-700">Upload Your Resume</label>
                <div class="file-upload rounded-lg p-8 text-center cursor-pointer transition-colors duration-300"
                     id="dropzone">
                    <div class="flex flex-col items-center justify-center space-y-3">
                        <i data-feather="upload-cloud" class="w-12 h-12 text-indigo-400"></i>
                        <p class="text-sm text-gray-500">Drag & drop your resume here</p>
                        <p class="text-xs text-gray-400">or</p>
                        <label class="px-4 py-2 bg-indigo-600 text-white rounded-md text-sm font-medium cursor-pointer hover:bg-indigo-700 transition-colors">
                            Browse Files
                            <input type="file" name="resume" accept=".pdf,.docx" class="hidden" required />
                        </label>
                        <p class="text-xs text-gray-400">Supports: PDF, DOCX (Max 5MB)</p>
                    </div>
                </div>
            </div>

            <div class="pt-4">
                <button type="submit"
                        class="w-full flex items-center justify-center gap-2 px-4 py-3 bg-indigo-600 text-white rounded-md font-medium hover:bg-indigo-700 transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                    <i data-feather="send" class="w-4 h-4"></i>
                    Submit Application
                </button>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <script>
        AOS.init();
        feather.replace();

        const dropzone = document.getElementById('dropzone');
        const fileInput = document.querySelector('input[type="file"]');

        dropzone.addEventListener('click', () => fileInput.click());

        fileInput.addEventListener('change', () => {
            if (fileInput.files.length) {
                dropzone.classList.add('active');
                dropzone.querySelector('p:nth-of-type(1)').textContent = fileInput.files[0].name;
            }
        });

        ['dragenter', 'dragover'].forEach(eventName => {
            dropzone.addEventListener(eventName, (e) => {
                e.preventDefault();
                dropzone.classList.add('active');
            });
        });

        ['dragleave', 'drop'].forEach(eventName => {
            dropzone.addEventListener(eventName, (e) => {
                e.preventDefault();
                if (eventName === 'drop') {
                    fileInput.files = e.dataTransfer.files;
                    dropzone.querySelector('p:nth-of-type(1)').textContent = fileInput.files[0].name;
                }
                dropzone.classList.remove('active');
            });
        });
    </script>
    <style>
        .file-upload {
            border: 2px dashed #94a3b8;
            transition: all 0.3s ease;
        }

            .file-upload:hover {
                border-color: #6366f1;
                background-color: #f8fafc;
            }

            .file-upload.active {
                border-color: #6366f1;
                background-color: #e0e7ff;
            }
    </style>
}
