@model List<JobBoardPlatform.Models.User>

@{
    ViewBag.Title = "Manage Job Seekers";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <script src="https://unpkg.com/feather-icons"></script>
</head>
<body class="bg-gray-50">
    <div class="min-h-screen">
        <!-- Header Section -->
        <div class="bg-white shadow-sm border-b border-gray-200">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between items-center py-6">
                    <div class="flex items-center space-x-4">
                        <div class="flex-shrink-0 bg-blue-50 rounded-xl p-3">
                            <i data-feather="users" class="h-6 w-6 text-blue-600"></i>
                        </div>
                        <div>
                            <h1 class="text-2xl font-bold text-gray-900">@ViewBag.Title</h1>
                            <p class="text-sm text-gray-500 mt-1">Manage and monitor job seeker accounts</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stats Overview -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8" data-aos="fade-up">
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow duration-200">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-gray-500">Total Seekers</p>
                            <p class="text-2xl font-bold text-gray-900 mt-1">@Model.Count</p>
                        </div>
                        <div class="bg-blue-50 rounded-lg p-3">
                            <i data-feather="users" class="h-5 w-5 text-blue-600"></i>
                        </div>
                    </div>
                </div>
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow duration-200">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-gray-500">Active</p>
                            <p class="text-2xl font-bold text-gray-900 mt-1">@Model.Count(s => !s.IsBlocked)</p>
                        </div>
                        <div class="bg-green-50 rounded-lg p-3">
                            <i data-feather="user-check" class="h-5 w-5 text-green-600"></i>
                        </div>
                    </div>
                </div>
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow duration-200">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-gray-500">Blocked</p>
                            <p class="text-2xl font-bold text-gray-900 mt-1">@Model.Count(s => s.IsBlocked)</p>
                        </div>
                        <div class="bg-red-50 rounded-lg p-3">
                            <i data-feather="user-x" class="h-5 w-5 text-red-600"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Table Section -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden" data-aos="fade-up" data-aos-delay="100">
                <!-- Table Header -->
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                    <div class="flex items-center justify-between">
                        <h3 class="text-lg font-semibold text-gray-800">Job Seeker Accounts</h3>
                    </div>
                </div>

                <!-- Table -->
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    Job Seeker
                                </th>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    Contact Info
                                </th>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    Account Status
                                </th>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var seeker in Model)
                            {
                                <tr class="hover:bg-gray-50 transition-all duration-150 ease-in-out group">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="flex-shrink-0 h-12 w-12 rounded-xl bg-gradient-to-br from-blue-100 to-blue-50 flex items-center justify-center shadow-sm group-hover:shadow transition-shadow duration-200">
                                                <i data-feather="user" class="h-5 w-5 text-blue-600"></i>
                                            </div>
                                            <div class="ml-4">
                                                <div class="text-sm font-semibold text-gray-900">@seeker.Name</div>
                                                <div class="text-xs text-gray-500 mt-0.5">ID: @seeker.Id</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-gray-900">@seeker.Email</div>
                                        <div class="text-xs text-gray-500 mt-0.5 flex items-center">
                                            <i data-feather="mail" class="h-3 w-3 mr-1"></i>
                                            Email
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        @if (seeker.IsBlocked)
                                        {
                                            <div class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-semibold bg-red-100 text-red-800 border border-red-200">
                                                <i data-feather="slash" class="h-3 w-3 mr-1.5"></i>
                                                Blocked
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-semibold bg-green-100 text-green-800 border border-green-200">
                                                <i data-feather="check-circle" class="h-3 w-3 mr-1.5"></i>
                                                Active
                                            </div>
                                        }
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                        <div class="flex items-center space-x-2">
                                            @if (seeker.IsBlocked)
                                            {
                                                <a href="@Url.Action("UnblockUser", "Admin", new { id = seeker.Id })"
                                                   class="inline-flex items-center px-3 py-2 rounded-lg text-xs font-semibold text-green-700 bg-green-50 hover:bg-green-100 border border-green-200 transition-all duration-200 hover:shadow-sm">
                                                    <i data-feather="user-check" class="h-3 w-3 mr-1.5"></i>
                                                    Unblock
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("BlockUser", "Admin", new { id = seeker.Id })"
                                                   class="inline-flex items-center px-3 py-2 rounded-lg text-xs font-semibold text-red-700 bg-red-50 hover:bg-red-100 border border-red-200 transition-all duration-200 hover:shadow-sm">
                                                    <i data-feather="user-x" class="h-3 w-3 mr-1.5"></i>
                                                    Block
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Table Footer -->
                <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
                    <div class="text-sm text-gray-500">
                        <span class="font-semibold text-gray-700">@Model.Count</span> job seekers total
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        AOS.init({
            duration: 600,
            once: true
        });
        feather.replace();
    </script>
</body>
</html>