            <!-- Table -->
            <div class="bg-white rounded-xl shadow-md overflow-hidden" data-aos="fade-up">
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Employer</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Location</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Posted Date</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
                            </tr>
                        </thead>

                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var job in Model)
                            {
                                <tr class="hover:bg-gray-50 transition-colors">
                                    <!-- Title -->
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-gray-900">@job.Title</div>
                                    </td>

                                    <!-- Employer -->
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@job.EmployerName</td>

                                    <!-- Category -->
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@job.Category</td>

                                    <!-- Location -->
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@job.Location</td>

                                    <!-- Posted Date -->
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@job.PostedDate.ToShortDateString()</td>

                                    <!-- Status -->
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        @if (job.IsApproved)
                                        {
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Approved</span>
                                        }
                                        else
                                        {
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">Pending</span>
                                        }
                                    </td>

                                    <!-- Action -->
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                        @if (!job.IsApproved)
                                        {
                                            <a href="@Url.Action("ApproveJob", "Admin", new { id = job.Id })"
                                               class="text-green-600 hover:text-green-900 mr-3 bg-green-50 px-3 py-1 rounded-md">
                                                Approve
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("RejectJob", "Admin", new { id = job.Id })"
                                               class="text-red-600 hover:text-red-900 mr-3 bg-red-50 px-3 py-1 rounded-md">
                                                Reject
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

