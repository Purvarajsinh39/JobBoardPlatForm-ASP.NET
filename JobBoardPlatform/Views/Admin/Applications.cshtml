@model List<JobBoardPlatform.Models.Application>

@{
    ViewBag.Title = "Pending Job Applications";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/feather-icons"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
</head>
<body class="bg-gray-50">
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-6xl mx-auto">

            <!-- Header -->
            <div class="flex justify-between items-center mb-8" data-aos="fade-down">
                <h1 class="text-3xl font-bold text-gray-800">@ViewBag.Title</h1>
            </div>

            <!-- Table -->
            <div class="bg-white rounded-xl shadow-md overflow-hidden" data-aos="fade-up">
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Candidate</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Job Title</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Employer</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Applied Date</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Resume</th>
                            </tr>
                        </thead>

                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var app in Model)
                            {
                                <tr class="hover:bg-gray-50 transition-colors">
                                    <!-- Candidate -->
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@app.CandidateName</td>

                                    <!-- Job Title -->
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@app.JobTitle</td>

                                    <!-- Employer -->
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@app.EmployerName</td>

                                    <!-- Applied Date -->
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@app.AppliedDate.ToString("dd-MM-yyyy")</td>

                                    <!-- Status -->
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                            @(app.Status == "Applied" ? "bg-yellow-100 text-yellow-800" : "bg-gray-100 text-gray-800")">
                                            @app.Status
                                        </span>
                                    </td>

                                    <!-- Resume -->
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                        @if (!string.IsNullOrEmpty(app.ResumePath))
                                        {
                                            <a href="@Url.Content(app.ResumePath)" 
                                               class="flex items-center gap-2 px-3 py-1 bg-blue-600 hover:bg-blue-700 text-white rounded-md transition-all duration-200"
                                               download>
                                                <i data-feather="download" class="w-4 h-4"></i>
                                                Download
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-gray-400 italic">No Resume</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        AOS.init();
        feather.replace();
    </script>
</body>
</html>
