@model List<JobBoardPlatform.Models.Application>

@{
    ViewBag.Title = "Pending Job Applications";
}

<h2>Pending Applications (Status = Applied)</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Candidate Name</th>
            <th>Job Title</th>
            <th>Employer</th>
            <th>Applied Date</th>
            <th>Status</th>
            <th>Resume</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var app in Model)
        {
            <tr>
                <td>@app.CandidateName</td>
                <td>@app.JobTitle</td>
                <td>@app.EmployerName</td>
                <td>@app.AppliedDate.ToString("dd-MM-yyyy")</td>
                <td><span class="badge badge-warning">@app.Status</span></td>
                <td>
                    @if (!string.IsNullOrEmpty(app.ResumePath))
                    {
                        <a href="@Url.Content(app.ResumePath)" class="btn btn-sm btn-primary" download>Download</a>
                    }
                    else
                    {
                        <span class="text-muted">No Resume</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
