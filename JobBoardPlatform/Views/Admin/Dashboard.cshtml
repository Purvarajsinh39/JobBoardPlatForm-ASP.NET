            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
                <!-- Total Jobs -->
                <div class="dashboard-card glass-card" data-aos="fade-up" data-aos-delay="100">
                    <div class="p-8 flex items-center">
