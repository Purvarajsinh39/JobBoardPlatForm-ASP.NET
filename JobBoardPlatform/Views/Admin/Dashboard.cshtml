@model JobBoardPlatform.Models.AdminDashboardViewModel

@{
    ViewBag.Title = "Admin Dashboard";
}


<style>
    @@keyframes scale-up-center-normal {
        0% {
            transform: scale(0.5);
        }

        100% {
            transform: scale(1);
        }
    }

    .card-body-animated {
        animation: scale-up-center-normal 1s cubic-bezier(0.445, 0.050, 0.550, 0.950) 0s 1 normal none;
    }
</style>
<h2>Admin Dashboard</h2>

<div class="container">
    <div class="row mb-4">
        <div class="col-md-4 card-body-animated" >
            <div class="card bg-primary text-white shadow">
                <div class="card-body">
                    Total Jobs
                    <div class="display-4">@Model.TotalJobs</div>
                </div>
            </div>
        </div>
        <div class="col-md-4 card-body-animated">
            <div class="card bg-success text-white shadow">
                <div class="card-body">
                    Approved Applications
                    <div class="display-4">@Model.ApprovedApplications</div>
                </div>
            </div>
        </div>
        <div class="col-md-4 card-body-animated">
            <div class="card bg-danger text-white shadow">
                <div class="card-body">
                    Rejected Applications
                    <div class="display-4">@Model.RejectedApplications</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 card-body-animated">
            <div class="card bg-warning text-white shadow">
                <div class="card-body">
                    Pending Jobs
                    <div class="display-4">@Model.PendingJobs.Count</div>
                </div>
            </div>
        </div>
        <div class="col-md-4 card-body-animated">
            <div class="card bg-info text-white shadow">
                <div class="card-body">
                    Total Applications
                    <div class="display-4">@Model.TotalApplications</div>
                </div>
            </div>
        </div>
        <div class="col-md-4 card-body-animated">
            <div class="card bg-secondary text-white shadow">
                <div class="card-body">
                    Total Employers
                    <div class="display-4">@Model.TotalEmployers</div>
                </div>
            </div>
        </div>
    </div>
</div>

