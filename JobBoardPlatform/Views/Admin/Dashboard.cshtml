    <script>
        // Init AOS & feather icons
        AOS.init({ duration: 800, easing: 'ease-in-out', once: true });
        feather.replace();

        // Vanta.js background
        VANTA.NET({
            el: "#vanta-bg",
            mouseControls: true,
            touchControls: true,
            gyroControls: false,
            minHeight: 200.00,
            minWidth: 200.00,
            scale: 1.00,
            scaleMobile: 1.00,
            color: 0x667eea,
            backgroundColor: 0xf8fafc,
            points: 12.00,
            maxDistance: 22.00,
            spacing: 18.00
        });

        // Chart config
        const chartColors = [
            '#667eea', '#48bb78', '#f56565', '#f6ad55', '#9f7aea',
            '#ed64a6', '#4299e1', '#38b2ac', '#ecc94b', '#a0aec0'
        ];

        const commonOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'top',
                    labels: {
                        color: '#4a5568',
                        font: { size: 14, family: 'Inter, sans-serif' },
                        padding: 20,
                        usePointStyle: true
                    }
                },
                tooltip: {
                    backgroundColor: '#2d3748',
                    titleColor: '#f7fafc',
                    bodyColor: '#e2e8f0',
                    borderColor: '#4a5568',
                    borderWidth: 1,
                    bodyFont: { size: 13 },
                    padding: 12,
                    cornerRadius: 8,
                    displayColors: true,
                    callbacks: {
                        label: function (context) {
                            return context.dataset.label + ': ' + context.formattedValue;
                        }
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: { color: '#e2e8f0', drawBorder: false },
                    ticks: { color: '#718096' }
                },
                x: {
                    grid: { display: false, drawBorder: false },
                    ticks: { color: '#718096' }
                }
            }
        };

        const roundChartOptions = {
            ...commonOptions,
            scales: {},
            cutout: '65%',
            plugins: {
                ...commonOptions.plugins,
                legend: {
                    ...commonOptions.plugins.legend,
                    position: 'right'
                }
            }
        };

        // Sample data for charts
        const sampleJobsData = [
            { Month: 'June', Count: 1 },
            { Month: 'July', Count: 2 }
        ];

        const sampleStatusData = [
            { Status: 'Applied', Count: 3 },
            { Status: 'Approved', Count: 2 },
            { Status: 'Rejected', Count: 1 }
        ];

        const sampleApplicationsData = [
            { Month: 'June', Count: 1 },
            { Month: 'July', Count: 5 }
        ];

        const sampleCategoryData = [
            { Category: 'Finance', Count: 1 },
            { Category: 'IT', Count: 1 },
            { Category: 'Marketing', Count: 1 }
        ];

        // Jobs Per Month Chart
        const ctx1 = document.getElementById('jobsPerMonthChart').getContext('2d');
        const gradient1 = ctx1.createLinearGradient(0, 0, 0, 300);
        gradient1.addColorStop(0, chartColors[0] + 'CC');
        gradient1.addColorStop(1, chartColors[0] + '33');
        new Chart(ctx1, {
            type: 'bar',
            data: {
                labels: sampleJobsData.map(x => x.Month),
                datasets: [{
                    label: 'Jobs Posted',
                    data: sampleJobsData.map(x => x.Count),
                    backgroundColor: gradient1,
                    borderColor: chartColors[0],
                    borderWidth: 1,
                    borderRadius: 6
                }]
            },
            options: commonOptions
        });

        // Applications Status Chart
        new Chart(document.getElementById('applicationsPerStatusChart'), {
            type: 'pie',
            data: {
                labels: sampleStatusData.map(x => x.Status),
                datasets: [{
                    data: sampleStatusData.map(x => x.Count),
                    backgroundColor: [chartColors[1], chartColors[2], chartColors[3]],
                    borderColor: '#fff',
                    borderWidth: 2,
                    hoverOffset: 10
                }]
            },
            options: roundChartOptions
        });

        // Applications Per Month Chart
        const ctx3 = document.getElementById('applicationsPerMonthChart').getContext('2d');
        const gradient3 = ctx3.createLinearGradient(0, 0, 0, 300);
        gradient3.addColorStop(0, chartColors[3] + 'AA');
        gradient3.addColorStop(1, chartColors[3] + '11');
        new Chart(ctx3, {
            type: 'line',
            data: {
                labels: sampleApplicationsData.map(x => x.Month),
                datasets: [{
                    label: 'Applications Received',
                    data: sampleApplicationsData.map(x => x.Count),
                    borderColor: chartColors[3],
                    backgroundColor: gradient3,
                    fill: true,
                    tension: 0.3,
                    pointBackgroundColor: chartColors[3],
                    pointRadius: 5,
                    pointHoverRadius: 7,
                    borderWidth: 2
                }]
            },
            options: commonOptions
        });

        // Jobs By Category Chart
        new Chart(document.getElementById('jobsByCategoryChart'), {
            type: 'doughnut',
            data: {
                labels: sampleCategoryData.map(x => x.Category),
                datasets: [{
                    data: sampleCategoryData.map(x => x.Count),
                    backgroundColor: chartColors.slice(0, sampleCategoryData.length),
                    borderColor: '#fff',
                    borderWidth: 2,
                    hoverOffset: 12
                }]
            },
            options: roundChartOptions
        });
    </script>
