@model List<JobBoardPlatform.Models.Application>

@{
    ViewBag.Title = "Shortlisted Candidates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/feather-icons"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }

        .glass-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        }

        .hover-lift {
            transition: all 0.3s ease;
        }

            .hover-lift:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.15);
            }

        .status-badge {
            padding: 6px 16px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .table-row-hover {
            transition: all 0.3s ease;
        }

            .table-row-hover:hover {
                background: linear-gradient(90deg, #f8fafc 0%, #ffffff 100%);
                transform: translateX(4px);
            }

        .action-btn {
            transition: all 0.3s ease;
        }

            .action-btn:hover {
                transform: scale(1.05);
            }

        .search-box {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }

        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            position: relative;
            overflow: hidden;
        }

            .stat-card::before {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 70%);
            }

        .floating-icon {
            animation: float 6s ease-in-out infinite;
        }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-10px);
            }
        }
    </style>
</head>
<body class="gradient-bg min-h-screen py-8">
    <div class="container mx-auto px-4">
        <div class="max-w-7xl mx-auto">
            <!-- Header Section -->
            <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center mb-8" data-aos="fade-down">
                <div class="mb-6 lg:mb-0">
                    <div class="flex items-center space-x-3 mb-2">
                        <div class="p-3 bg-white bg-opacity-20 rounded-2xl">
                            <i data-feather="award" class="w-8 h-8" style="color: #6A5ACD;"></i>
                        </div>
                        <h1 class="text-4xl font-bold" style="color: #6A5ACD;">Shortlisted Candidates</h1>
                    </div>
                    <p class="text-blue-100 text-lg" style="color: #6A5ACD;">Your top candidates ready for the next hiring stage</p>
                </div>
                <div class="flex flex-col sm:flex-row gap-4">
                    <a href="@Url.Action("DownloadShortlistedApplicationsExcel", "Employer")"
                       class="flex items-center gap-3 px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
                        <svg fill="#fff" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 50 50" class="w-5 h-5">
                            <path d="M28.8125 .03125L.8125 5.34375C.339844 5.433594 0 5.863281 0 6.34375L0 43.65625C0 44.136719 .339844 44.566406 .8125 44.65625L28.8125 49.96875C28.875 49.980469 28.9375 50 29 50C29.230469 50 29.445313 49.929688 29.625 49.78125C29.855469 49.589844 30 49.296875 30 49L30 1C30 .703125 29.855469 .410156 29.625 .21875C29.394531 .0273438 29.105469 -.0234375 28.8125 .03125ZM32 6L32 13L34 13L34 15L32 15L32 20L34 20L34 22L32 22L32 27L34 27L34 29L32 29L32 35L34 35L34 37L32 37L32 44L47 44C48.101563 44 49 43.101563 49 42L49 8C49 6.898438 48.101563 6 47 6ZM36 13L44 13L44 15L36 15ZM6.6875 15.6875L11.8125 15.6875L14.5 21.28125C14.710938 21.722656 14.898438 22.265625 15.0625 22.875L15.09375 22.875C15.199219 22.511719 15.402344 21.941406 15.6875 21.21875L18.65625 15.6875L23.34375 15.6875L17.75 24.9375L23.5 34.375L18.53125 34.375L15.28125 28.28125C15.160156 28.054688 15.035156 27.636719 14.90625 27.03125L14.875 27.03125C14.8125 27.316406 14.664063 27.761719 14.4375 28.34375L11.1875 34.375L6.1875 34.375L12.15625 25.03125ZM36 20L44 20L44 22L36 22ZM36 27L44 27L44 29L36 29ZM36 35L44 35L44 37L36 37Z"></path>
                        </svg>
                        <span class="font-medium">Download Excel</span>
                    </a>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8" data-aos="fade-up">
                <div class="stat-card rounded-2xl p-6 text-white hover-lift">
                    <div class="flex justify-between items-center relative z-10">
                        <div>
                            <p class="text-sm font-medium opacity-90">Total Shortlisted</p>
                            <h3 class="text-3xl font-bold mt-2">@Model.Count</h3>
                        </div>
                        <div class="p-3 rounded-2xl bg-white bg-opacity-20">
                            <i data-feather="award" class="w-6 h-6"></i>
                        </div>
                    </div>
                </div>
                <div class="stat-card rounded-2xl p-6 text-white hover-lift" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                    <div class="flex justify-between items-center relative z-10">
                        <div>
                            <p class="text-sm font-medium opacity-90">This Month</p>
                            <h3 class="text-3xl font-bold mt-2">@Model.Count(a => a.AppliedDate.Month == DateTime.Now.Month)</h3>
                        </div>
                        <div class="p-3 rounded-2xl bg-white bg-opacity-20">
                            <i data-feather="calendar" class="w-6 h-6"></i>
                        </div>
                    </div>
                </div>
                <div class="stat-card rounded-2xl p-6 text-white hover-lift" style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);">
                    <div class="flex justify-between items-center relative z-10">
                        <div>
                            <p class="text-sm font-medium opacity-90">With Resume</p>
                            <h3 class="text-3xl font-bold mt-2">@Model.Count(a => !string.IsNullOrEmpty(a.ResumePath))</h3>
                        </div>
                        <div class="p-3 rounded-2xl bg-white bg-opacity-20">
                            <i data-feather="file-text" class="w-6 h-6"></i>
                        </div>
                    </div>
                </div>
                <div class="stat-card rounded-2xl p-6 text-white hover-lift" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
                    <div class="flex justify-between items-center relative z-10">
                        <div>
                            <p class="text-sm font-medium opacity-90">Unique Jobs</p>
                            <h3 class="text-3xl font-bold mt-2">@Model.Select(a => a.JobTitle).Distinct().Count()</h3>
                        </div>
                        <div class="p-3 rounded-2xl bg-white bg-opacity-20">
                            <i data-feather="briefcase" class="w-6 h-6"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Search Section -->
            <div class="glass-card rounded-2xl p-6 mb-8 shadow-lg search-box" data-aos="fade-up" data-aos-delay="100">
                <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
                    <i data-feather="search" class="w-5 h-5 mr-2 text-blue-600"></i>
                    Find Candidates
                </h2>
                <form method="get" class="flex flex-col md:flex-row gap-4">
                    <div class="flex-grow">
                        <div class="relative">
                            <i data-feather="search" class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                            <input type="text" name="searchTerm"
                                   class="w-full pl-12 pr-4 py-3 border-0 rounded-xl focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm"
                                   placeholder="Search by candidate name or job title..."
                                   value="@ViewBag.SearchTerm">
                        </div>
                    </div>
                    <button type="submit"
                            class="px-8 py-3 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white rounded-xl transition-all duration-300 font-medium flex items-center justify-center gap-2 shadow-lg hover:shadow-xl">
                        <i data-feather="search" class="w-4 h-4"></i>
                        Search Candidates
                    </button>
                </form>
            </div>

            <!-- Candidates Table -->
            @if (Model != null && Model.Any())
            {
                <div class="glass-card rounded-2xl shadow-lg overflow-hidden" data-aos="fade-up" data-aos-delay="200">
                    <div class="px-6 py-4 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-blue-50">
                        <h2 class="text-xl font-bold text-gray-800 flex items-center">
                            <i data-feather="users" class="w-5 h-5 mr-2 text-blue-600"></i>
                            Shortlisted Candidates
                            <span class="ml-2 px-3 py-1 bg-blue-100 text-blue-800 text-sm font-medium rounded-full">
                                @Model.Count candidates
                            </span>
                        </h2>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Candidate</th>
                                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Job Title</th>
                                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Applied Date</th>
                                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Resume</th>
                                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</th>
                                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                @foreach (var app in Model)
                                {
                                    <tr class="table-row-hover">
                                        <td class="px-6 py-5 whitespace-nowrap">
                                            <div class="flex items-center">
                                                <div class="flex-shrink-0 h-12 w-12 rounded-full bg-gradient-to-r from-blue-500 to-purple-500 flex items-center justify-center shadow-sm">
                                                    <i data-feather="user" class="w-6 h-6 text-white"></i>
                                                </div>
                                                <div class="ml-4">
                                                    <div class="text-sm font-semibold text-gray-900">@app.CandidateName</div>
                                                    <div class="text-sm text-gray-500">Shortlisted Candidate</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-6 py-5">
                                            <div class="text-sm font-medium text-gray-900">@app.JobTitle</div>
                                        </td>
                                        <td class="px-6 py-5 whitespace-nowrap">
                                            <div class="text-sm text-gray-700 flex items-center">
                                                <i data-feather="calendar" class="w-4 h-4 mr-2 text-gray-400"></i>
                                                @app.AppliedDate.ToShortDateString()
                                            </div>
                                        </td>
                                        <td class="px-6 py-5 whitespace-nowrap">
                                            @if (!string.IsNullOrEmpty(app.ResumePath))
                                            {
                                                <a href="@Url.Content(app.ResumePath)"
                                                   class="inline-flex items-center px-4 py-2 bg-blue-50 text-blue-700 rounded-lg hover:bg-blue-100 transition-colors duration-200 action-btn"
                                                   download>
                                                    <i data-feather="download" class="w-4 h-4 mr-2"></i>
                                                    Download Resume
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="inline-flex items-center px-3 py-1 bg-gray-100 text-gray-500 rounded-lg">
                                                    <i data-feather="file" class="w-4 h-4 mr-2"></i>
                                                    No Resume
                                                </span>
                                            }
                                        </td>
                                        <td class="px-6 py-5 whitespace-nowrap">
                                            <span class="status-badge bg-green-100 text-green-800 border border-green-200">
                                                Approved
                                            </span>
                                        </td>
                                        <td class="px-6 py-5 whitespace-nowrap">
                                            @if (!string.IsNullOrEmpty(app.CandidateEmail))
                                            {
                                                <a href="https://mail.google.com/mail/u/0/?view=cm&fs=1&to=@app.CandidateEmail&su=Invitation for Interview - @app.JobTitle&body=Dear @app.CandidateName,%0A%0AThank you for your interest in the @app.JobTitle position at [Your Company].%0A%0AWe were impressed by your application and are pleased to invite you to interview.%0A%0APlease reply to this email at your earliest convenience to suggest a few dates%2Ftimes that work well for your interview.%0A%0AWe look forward to speaking with you!%0A%0ABest regards,%0A[Your Name]%0A[Your Position]%0A[Your Company]"
                                                   class="inline-flex items-center px-4 py-2 bg-purple-50 text-purple-700 rounded-lg hover:bg-purple-100 transition-colors duration-200 action-btn"
                                                   target="_blank">
                                                    <i data-feather="mail" class="w-4 h-4 mr-2"></i>
                                                    Mail For Interview
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="inline-flex items-center px-3 py-1 bg-gray-100 text-gray-500 rounded-lg">
                                                    <i data-feather="mail" class="w-4 h-4 mr-2"></i>
                                                    No Email
                                                </span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <div class="glass-card rounded-2xl p-12 text-center" data-aos="fade-up">
                    <div class="mx-auto w-24 h-24 bg-gray-100 rounded-3xl flex items-center justify-center mb-6">
                        <i data-feather="users" class="w-12 h-12 text-gray-400"></i>
                    </div>
                    <h3 class="text-2xl font-semibold text-gray-600 mb-4">No Shortlisted Candidates Yet</h3>
                    <p class="text-gray-500 mb-8 max-w-md mx-auto">
                        When you approve candidates from your applications, they will appear here for easy access and management.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a href="@Url.Action("Dashboard", "Employer")"
                           class="inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-xl hover:bg-blue-700 transition-all duration-300 font-medium">
                            <i data-feather="arrow-left" class="w-4 h-4 mr-2"></i>
                            Back to Dashboard
                        </a>
                        <a href="@Url.Action("ViewApplications", "Employer")"
                           class="inline-flex items-center px-6 py-3 border-2 border-blue-200 text-blue-700 bg-blue-50 rounded-xl hover:bg-blue-100 transition-all duration-300 font-medium">
                            <i data-feather="list" class="w-4 h-4 mr-2"></i>
                            View All Applications
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 800,
            once: true
        });
        feather.replace();
        document.addEventListener('DOMContentLoaded', function () {
            const tableRows = document.querySelectorAll('.table-row-hover');
            tableRows.forEach(row => {
                row.addEventListener('mouseenter', function () {
                    this.style.boxShadow = '0 4px 12px rgba(0, 0, 0, 0.1)';
                });
                row.addEventListener('mouseleave', function () {
                    this.style.boxShadow = 'none';
                });
            });
        });
    </script>
</body>
</html>