@model JobBoardPlatform.Models.User
@{
    ViewBag.Title = "Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Tailwind, Feather, AOS -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>

    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }

        .glass-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        }

        .profile-avatar {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: 4px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 10px 25px -5px rgba(102, 126, 234, 0.4);
        }

        .form-input {
            transition: all 0.3s ease;
            border: 2px solid #e2e8f0;
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        }

            .form-input:focus {
                border-color: #667eea;
                background: white;
                box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
                transform: translateY(-2px);
            }

        .submit-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .submit-btn::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
                transition: left 0.5s;
            }

            .submit-btn:hover::before {
                left: 100%;
            }

            .submit-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 25px -5px rgba(102, 126, 234, 0.4);
            }

        .success-message {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            border: none;
            animation: slideIn 0.5s ease-out;
        }

        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .gradient-text {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .quick-action-item {
            transition: all 0.3s ease;
            border-radius: 10px;
        }

            .quick-action-item:hover {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white !important;
                transform: translateX(5px);
            }

                .quick-action-item:hover i {
                    color: white !important;
                }
    </style>
</head>

<body class="gradient-bg">
    <div class="min-h-screen py-10 px-4">
        <div class="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-3 gap-8">

            <!-- LEFT COLUMN - QUICK ACTIONS -->
            <div class="glass-card rounded-2xl p-6 lg:col-span-1" data-aos="fade-right">
                <div class="text-center mb-8">
                    <div class="profile-avatar w-24 h-24 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i data-feather="user" class="w-10 h-10 text-white"></i>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-800">Quick Actions</h2>
                    <p class="text-gray-500 text-sm mt-1">Navigate employer features</p>
                </div>

                <div class="space-y-3">
                    <a href="@Url.Action("Dashboard", "Employer")" class="quick-action-item flex items-center p-4 text-gray-700">
                        <i data-feather="home" class="w-5 h-5 mr-3 text-blue-600"></i>
                        Dashboard
                    </a>

                    <a href="@Url.Action("ManageJobs", "Employer")" class="quick-action-item flex items-center p-4 text-gray-700">
                        <i data-feather="briefcase" class="w-5 h-5 mr-3 text-indigo-600"></i>
                        Manage Jobs
                    </a>

                    <a href="@Url.Action("CreateJob", "Employer")" class="quick-action-item flex items-center p-4 text-gray-700">
                        <i data-feather="plus-circle" class="w-5 h-5 mr-3 text-green-600"></i>
                        Post Job
                    </a>

                    <a href="@Url.Action("ShortlistedCandidates", "Employer")" class="quick-action-item flex items-center p-4 text-gray-700">
                        <i data-feather="user-check" class="w-5 h-5 mr-3 text-purple-600"></i>
                        Shortlisted
                    </a>

                    <a href="@Url.Action("ViewAllApplications", "Employer")" class="quick-action-item flex items-center p-4 text-gray-700">
                        <i data-feather="file-text" class="w-5 h-5 mr-3 text-pink-600"></i>
                        Applications
                    </a>
                </div>
            </div>

            <!-- RIGHT COLUMN - EDIT PROFILE FORM -->
            <div class="glass-card rounded-2xl p-8 lg:col-span-2" data-aos="fade-left">
                <h2 class="text-3xl font-bold gradient-text mb-8 flex items-center">
                    <i data-feather="edit-3" class="w-6 h-6 mr-3"></i> Edit Profile
                </h2>

                <!-- Success Message -->
                @if (TempData["Success"] != null)
                {
                    <div class="success-message mb-6 p-4 rounded-xl text-white shadow-lg flex items-center">
                        <i data-feather="check-circle" class="w-5 h-5 mr-3"></i>
                        <span>@TempData["Success"]</span>
                    </div>
                }

                <!-- FORM -->
                @using (Html.BeginForm("EditProfile", "Employer", FormMethod.Post))
                {
                    <div class="space-y-6">
                        <!-- Name -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                            @Html.TextBoxFor(m => m.Name, new
                            {
                                @class = "form-input w-full rounded-xl p-4 focus:outline-none",
                                required = "required",
                                placeholder = "Enter your name"
                            })
                        </div>

                        <!-- Email -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                            @Html.TextBoxFor(m => m.Email, new
                            {
                                @class = "form-input w-full rounded-xl p-4 focus:outline-none",
                                required = "required",
                                type = "email",
                                placeholder = "Enter your email"
                            })
                        </div>

                        <!-- Password -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                            @Html.PasswordFor(m => m.Password, new
                            {
                                @class = "form-input w-full rounded-xl p-4 focus:outline-none",
                                required = "required",
                                placeholder = "Enter your password"
                            })
                        </div>

                        <!-- Submit -->
                        <div class="pt-4">
                            <button type="submit"
                                    class="submit-btn w-full flex items-center justify-center space-x-3 py-4 px-6 text-white rounded-xl font-semibold text-lg transition-all duration-300">
                                <i data-feather="save" class="w-5 h-5"></i>
                                <span>Update Profile</span>
                                <i data-feather="arrow-right" class="w-5 h-5"></i>
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://unpkg.com/feather-icons"></script>
    <script>
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });
        feather.replace();

        const successMessage = document.querySelector('.success-message');
        if (successMessage) {
            setTimeout(() => {
                successMessage.style.opacity = '0';
                successMessage.style.transform = 'translateY(-10px)';
                setTimeout(() => successMessage.remove(), 500);
            }, 5000);
        }
    </script>
</body>
</html>
