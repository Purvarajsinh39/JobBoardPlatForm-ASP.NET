@model JobBoardPlatform.Models.User
@{
    ViewBag.Title = "Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-gray-50 min-h-screen">
    <div class="max-w-md mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="text-center mb-8">
            <div class="mx-auto h-16 w-16 bg-blue-100 rounded-full flex items-center justify-center mb-4">
                <i data-feather="user" class="text-blue-600 w-8 h-8"></i>
            </div>
            <h2 class="text-3xl font-extrabold text-gray-900">My Profile</h2>
            <p class="mt-2 text-sm text-gray-600">Update your personal information</p>
        </div>

        <div class="bg-white shadow rounded-lg overflow-hidden">
            <div class="px-6 py-5">
                <!-- Success Message -->
                @if (TempData["Success"] != null)
                {
                    <div class="mb-6 p-4 bg-green-50 rounded-md border border-green-200 text-green-700">
                        <div class="flex items-center">
                            <i data-feather="check-circle" class="w-5 h-5 mr-2"></i>
                            <span>@TempData["Success"]</span>
                        </div>
                    </div>
                }

                <!-- Form -->
                @using (Html.BeginForm("EditProfile", "Employer", FormMethod.Post))
                {
                    <div class="space-y-6">
                        <!-- Name -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                            <div class="mt-1 relative rounded-md shadow-sm">
                                @Html.TextBoxFor(m => m.Name, new
                                {
                                    @class = "focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md p-3 border",
                                    required = "required",
                                    placeholder = "Enter your name"
                                })
                            </div>
                        </div>

                        <!-- Email -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                            <div class="mt-1 relative rounded-md shadow-sm">
                                @Html.TextBoxFor(m => m.Email, new
                                {
                                    @class = "focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md p-3 border",
                                    required = "required",
                                    type = "email",
                                    placeholder = "Enter your email"
                                })
                            </div>
                        </div>

                        <!-- Password -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                            <div class="mt-1 relative rounded-md shadow-sm">
                                @Html.PasswordFor(m => m.Password, new
                                {
                                    @class = "focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md p-3 border",
                                    required = "required",
                                    placeholder = "Enter your password"
                                })
                            </div>
                        </div>

                        <!-- Submit -->
                        <div class="pt-2">
                            <button type="submit"
                                    class="w-full flex justify-center items-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
                                Update Profile
                                <i data-feather="arrow-right" class="ml-2 w-4 h-4"></i>
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <script>
        AOS.init();
        feather.replace();
    </script>
}
