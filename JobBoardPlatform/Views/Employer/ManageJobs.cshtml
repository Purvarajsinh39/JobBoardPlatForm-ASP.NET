        <br>
        <div class="flex space-x-4">
            <a href="@Url.Action("DownloadPostedJobsExcel", "Employer",new { jobId = ViewBag.JobId })"
               class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition flex items-center">
                <i data-feather="download" class="mr-2"></i> Download Excel
            </a>
        </div>
    </div>

    <script>
        AOS.init();
        feather.replace();
    </script>
</body>
</html>
