@model List<JobBoardPlatform.Models.Job>

@{
    ViewBag.Title = "Manage Jobs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Jobs</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <style>
        .glass-effect {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .hover-lift {
            transition: all 0.3s ease;
        }

            .hover-lift:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.15);
            }

        .status-badge {
            padding: 6px 16px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .table-row-hover {
            transition: all 0.3s ease;
        }

            .table-row-hover:hover {
                background: linear-gradient(90deg, #f8fafc 0%, #ffffff 100%);
                transform: translateX(4px);
            }

        .action-btn {
            transition: all 0.3s ease;
        }

            .action-btn:hover {
                transform: scale(1.05);
            }

        .search-box {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }

        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            position: relative;
            overflow: hidden;
        }

            .stat-card::before {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 70%);
            }

        /* Wider table styles */
        .wide-table-container {
            width: 100%;
            overflow-x: auto;
        }

        .wide-table {
            width: 100%;
            min-width: 1200px; /* Increased minimum width */
        }

        .table-cell {
            padding: 1.25rem 1.5rem;
            white-space: nowrap;
        }

        .table-header {
            padding: 1rem 1.5rem;
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        }

        .actions-column {
            min-width: 300px; /* Wider actions column */
        }

        .title-column {
            min-width: 250px; /* Wider title column */
        }

        .category-column {
            min-width: 150px;
        }

        .location-column {
            min-width: 150px;
        }

        .date-column {
            min-width: 120px;
        }

        .status-column {
            min-width: 120px;
        }

        .applications-column {
            min-width: 120px;
        }
    </style>
</head>
<body class="gradient-bg min-h-screen py-8">
    <div class="container mx-auto px-4 max-w-full">
        <!-- Changed to max-w-full -->
        <!-- Header Section -->
        <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center mb-8" data-aos="fade-down">
            <div class="mb-6 lg:mb-0">
                <div class="flex items-center space-x-3 mb-2">
                    <div class="p-3 bg-white bg-opacity-20 rounded-2xl">
                        <i data-feather="briefcase" class="w-8 h-8" style="color: #6A5ACD;"></i>
                    </div>
                    <h1 class="text-4xl font-bold" style="color: #6A5ACD;">Manage Your Jobs</h1>
                </div>
                <p class="text-blue-100 text-lg" style="color: #6A5ACD;">View and manage all your job postings in one place</p>
            </div>
            <div class="flex flex-col sm:flex-row gap-4">
