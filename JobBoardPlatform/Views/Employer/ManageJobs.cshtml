@model List<JobBoardPlatform.Models.Job>

@{
    ViewBag.Title = "Manage Jobs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Jobs</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <script src="https://unpkg.com/feather-icons"></script>
    <style>
        .job-table {
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
                        0 2px 4px -1px rgba(0, 0, 0, 0.06);
        }
        .badge {
            padding: 0.35rem 0.65rem;
            border-radius: 50rem;
            font-size: 0.75rem;
            font-weight: 600;
        }
        .search-input {
            border-radius: 8px;
            padding: 0.5rem 1rem;
            border: 1px solid #e2e8f0;
            transition: all 0.3s ease;
        }
        .search-input:focus {
            outline: none;
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
        }
        .action-btn {
            transition: all 0.2s ease;
            border-radius: 6px;
            padding: 0.25rem 0.75rem;
            font-size: 0.875rem;
        }
        .action-btn:hover {
            transform: translateY(-1px);
        }
        .container-btn-download {
            @@apply flex items-center gap-2 bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-all duration-200;
        }
    </style>
</head>
<body class="bg-gray-50">
    <div class="container mx-auto px-4 py-8 max-w-7xl">
        <div class="flex justify-between items-center mb-8">
            <h2 class="text-3xl font-bold text-gray-800">Your Posted Jobs</h2>
            <div class="relative">
                <!-- 🔍 Search -->
                <form method="get" class="flex gap-2">
                    <input type="text" name="searchTerm"
                           class="search-input w-64 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                           placeholder="Search by title or category"
                           value="@ViewBag.SearchTerm" />
                    <button type="submit"
                            class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center gap-2">
                        <i data-feather="search"></i>
                        <span>Search</span>
                    </button>
                </form>
            </div>
        </div>

        <!-- ✅ Success Message -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded" role="alert">
                <p>@TempData["SuccessMessage"]</p>
            </div>
        }

        <!-- 📋 Jobs Table -->
        <div class="bg-white job-table" data-aos="fade-up">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Location</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Posted Date</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Applications</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @if (Model != null && Model.Any())
                        {
                            foreach (var job in Model)
                            {
                                <tr class="hover:bg-gray-50 transition-colors">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@job.Title</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@job.Category</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@job.Location</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@job.PostedDate.ToShortDateString()</td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="badge @(job.IsApproved ? "bg-green-100 text-green-800" : "bg-yellow-100 text-yellow-800")">
                                            @(job.IsApproved ? "Approved" : "Pending")
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="text-sm font-semibold text-gray-900">@job.ApplicationCount</span>
                                        <span class="text-xs text-gray-500">Applicants</span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
                                        <a href="@Url.Action("EditJob", "Employer", new { id = job.Id })"
                                           class="action-btn bg-yellow-100 text-yellow-800 hover:bg-yellow-200 inline-flex items-center">
                                            <i data-feather="edit-2" class="w-4 h-4 mr-1"></i> Edit
                                        </a>
                                        <a href="@Url.Action("JobDetails", "Employer", new { id = job.Id })"
                                           class="action-btn bg-blue-100 text-blue-800 hover:bg-blue-200 inline-flex items-center">
                                            <i data-feather="eye" class="w-4 h-4 mr-1"></i> Details
                                        </a>
                                        <a href="@Url.Action("DeleteJob", "Employer", new { id = job.Id })"
                                           class="action-btn bg-red-100 text-red-800 hover:bg-red-200 inline-flex items-center"
                                           onclick="return confirm('Are you sure you want to delete this job?');">
                                            <i data-feather="trash-2" class="w-4 h-4 mr-1"></i> Delete
                                        </a>
                                        <a href="@Url.Action("ViewApplications", "Employer", new { id = job.Id })"
                                           class="action-btn bg-gray-100 text-gray-800 hover:bg-gray-200 inline-flex items-center">
                                            <i data-feather="users" class="w-4 h-4 mr-1"></i> View Applications
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="px-6 py-4 text-center text-gray-500">
                                    No jobs found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

