                <a href="@Url.Action("DownloadPostedJobsExcel", "Employer")"
                   class="flex items-center gap-3 px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
                    <svg fill="#fff" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 50 50" class="w-5 h-5">
                        <path d="M28.8125 .03125L.8125 5.34375C.339844 5.433594 0 5.863281 0 6.34375L0 43.65625C0 44.136719 .339844 44.566406 .8125 44.65625L28.8125 49.96875C28.875 49.980469 28.9375 50 29 50C29.230469 50 29.445313 49.929688 29.625 49.78125C29.855469 49.589844 30 49.296875 30 49L30 1C30 .703125 29.855469 .410156 29.625 .21875C29.394531 .0273438 29.105469 -.0234375 28.8125 .03125ZM32 6L32 13L34 13L34 15L32 15L32 20L34 20L34 22L32 22L32 27L34 27L34 29L32 29L32 35L34 35L34 37L32 37L32 44L47 44C48.101563 44 49 43.101563 49 42L49 8C49 6.898438 48.101563 6 47 6ZM36 13L44 13L44 15L36 15ZM6.6875 15.6875L11.8125 15.6875L14.5 21.28125C14.710938 21.722656 14.898438 22.265625 15.0625 22.875L15.09375 22.875C15.199219 22.511719 15.402344 21.941406 15.6875 21.21875L18.65625 15.6875L23.34375 15.6875L17.75 24.9375L23.5 34.375L18.53125 34.375L15.28125 28.28125C15.160156 28.054688 15.035156 27.636719 14.90625 27.03125L14.875 27.03125C14.8125 27.316406 14.664063 27.761719 14.4375 28.34375L11.1875 34.375L6.1875 34.375L12.15625 25.03125ZM36 20L44 20L44 22L36 22ZM36 27L44 27L44 29L36 29ZM36 35L44 35L44 37L36 37Z"></path>
                    </svg>
                    <span class="font-medium">Download Excel</span>
                </a>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8" data-aos="fade-up">
            <div class="stat-card rounded-2xl p-6 text-white hover-lift">
                <div class="flex justify-between items-center relative z-10">
                    <div>
                        <p class="text-sm font-medium opacity-90">Total Jobs</p>
                        <h3 class="text-3xl font-bold mt-2">@Model.Count</h3>
                    </div>
                    <div class="p-3 rounded-2xl bg-white bg-opacity-20">
                        <i data-feather="briefcase" class="w-6 h-6"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card rounded-2xl p-6 text-white hover-lift" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                <div class="flex justify-between items-center relative z-10">
                    <div>
                        <p class="text-sm font-medium opacity-90">Approved</p>
                        <h3 class="text-3xl font-bold mt-2">@Model.Count(j => j.IsApproved)</h3>
                    </div>
                    <div class="p-3 rounded-2xl bg-white bg-opacity-20">
                        <i data-feather="check-circle" class="w-6 h-6"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card rounded-2xl p-6 text-white hover-lift" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
                <div class="flex justify-between items-center relative z-10">
                    <div>
                        <p class="text-sm font-medium opacity-90">Pending</p>
                        <h3 class="text-3xl font-bold mt-2">@Model.Count(j => !j.IsApproved)</h3>
                    </div>
                    <div class="p-3 rounded-2xl bg-white bg-opacity-20">
                        <i data-feather="clock" class="w-6 h-6"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card rounded-2xl p-6 text-white hover-lift" style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);">
                <div class="flex justify-between items-center relative z-10">
                    <div>
                        <p class="text-sm font-medium opacity-90">Total Applications</p>
                        <h3 class="text-3xl font-bold mt-2">@Model.Sum(j => j.ApplicationCount)</h3>
                    </div>
                    <div class="p-3 rounded-2xl bg-white bg-opacity-20">
                        <i data-feather="users" class="w-6 h-6"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search Section -->
        <div class="glass-effect rounded-2xl p-6 mb-8 shadow-lg search-box" data-aos="fade-up" data-aos-delay="100">
            <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
                <i data-feather="search" class="w-5 h-5 mr-2 text-blue-600"></i>
                Search Jobs
            </h2>
            <form method="get" class="flex flex-col md:flex-row gap-4">
                <div class="flex-grow">
                    <div class="relative">
                        <i data-feather="search" class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                        <input type="text" name="searchTerm"
                               class="w-full pl-12 pr-4 py-3 border-0 rounded-xl focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm"
                               placeholder="Search by job title or category..."
                               value="@ViewBag.SearchTerm" />
                    </div>
                </div>
                <button type="submit"
                        class="px-8 py-3 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white rounded-xl transition-all duration-300 font-medium flex items-center justify-center gap-2 shadow-lg hover:shadow-xl">
                    <i data-feather="search" class="w-4 h-4"></i>
                    Search Jobs
                </button>
            </form>
        </div>

        <!-- Success Message -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-gradient-to-r from-green-50 to-emerald-50 border-l-4 border-green-500 text-green-800 p-5 mb-6 rounded-xl flex items-start shadow-md" role="alert" data-aos="fade-up">
                <i data-feather="check-circle" class="w-6 h-6 mr-3 mt-0.5 flex-shrink-0 text-green-500"></i>
                <div>
                    <p class="font-medium">Success!</p>
                    <p class="mt-1">@TempData["SuccessMessage"]</p>
                </div>
            </div>
        }

        <!-- Jobs Table - Wider Version -->
        <div class="glass-effect rounded-2xl shadow-lg overflow-hidden" data-aos="fade-up" data-aos-delay="200">
            <div class="px-6 py-4 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-blue-50">
                <h2 class="text-xl font-bold text-gray-800 flex items-center">
                    <i data-feather="list" class="w-5 h-5 mr-2 text-blue-600"></i>
                    Your Job Postings
                    <span class="ml-2 px-3 py-1 bg-blue-100 text-blue-800 text-sm font-medium rounded-full">
                        @Model.Count jobs
                    </span>
                </h2>
            </div>

            <div class="wide-table-container">
                <table class="wide-table divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="table-header text-center text-xs font-semibold text-gray-600 uppercase tracking-wider title-column">Job Title</th>
                            <th class="table-header text-center text-xs font-semibold text-gray-600 uppercase tracking-wider category-column">Category</th>
                            <th class="table-header text-center text-xs font-semibold text-gray-600 uppercase tracking-wider location-column">Location</th>
                            <th class="table-header text-center text-xs font-semibold text-gray-600 uppercase tracking-wider date-column">Posted Date</th>
                            <th class="table-header text-center text-xs font-semibold text-gray-600 uppercase tracking-wider status-column">Status</th>
                            <th class="table-header text-center text-xs font-semibold text-gray-600 uppercase tracking-wider applications-column">Applications</th>
                            <th class="table-header text-center text-xs font-semibold text-gray-600 uppercase tracking-wider actions-column">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @if (Model != null && Model.Any())
                        {
                            foreach (var job in Model)
                            {
                                <tr class="table-row-hover">
                                    <td class="table-cell">
                                        <div class="flex items-center">
                                            <div class="flex-shrink-0 h-10 w-10 bg-blue-100 rounded-lg flex items-center justify-center">
                                                <i data-feather="briefcase" class="w-5 h-5 text-blue-600"></i>
                                            </div>
                                            <div class="ml-4">
                                                <div class="text-sm font-semibold text-gray-900">@job.Title</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="table-cell">
                                        <div class="text-sm text-gray-700 font-medium">@job.Category</div>
                                    </td>
                                    <td class="table-cell">
                                        <div class="text-sm text-gray-700 flex items-center">
                                            <i data-feather="map-pin" class="w-4 h-4 mr-2 text-gray-400"></i>
                                            @job.Location
                                        </div>
                                    </td>
                                    <td class="table-cell">
                                        <div class="text-sm text-gray-700">@job.PostedDate.ToShortDateString()</div>
                                    </td>
                                    <td class="table-cell">
                                        <span class="status-badge @(job.IsApproved ? "bg-green-100 text-green-800 border border-green-200" : "bg-yellow-100 text-yellow-800 border border-yellow-200")">
                                            @(job.IsApproved ? "Approved" : "Pending")
                                        </span>
                                    </td>
                                    <td class="table-cell">
                                        <div class="flex items-center">
                                            <div class="text-sm font-bold text-gray-900">@job.ApplicationCount</div>
                                            <div class="text-xs text-gray-500 ml-1">applicants</div>
                                        </div>
                                    </td>
                                    <td class="table-cell actions-column">
                                        <div class="flex flex-wrap gap-2">
                                            <a href="@Url.Action("EditJob", "Employer", new { id = job.Id })"
                                               class="inline-flex items-center px-4 py-2 bg-yellow-50 text-yellow-700 rounded-lg hover:bg-yellow-100 transition-colors duration-200 action-btn"
                                               title="Edit Job">
                                                <i data-feather="edit-2" class="w-4 h-4 mr-2"></i>
                                                Edit
                                            </a>
                                            <a href="@Url.Action("JobDetails", "Employer", new { id = job.Id })"
                                               class="inline-flex items-center px-4 py-2 bg-blue-50 text-blue-700 rounded-lg hover:bg-blue-100 transition-colors duration-200 action-btn"
                                               title="View Details">
                                                <i data-feather="eye" class="w-4 h-4 mr-2"></i>
                                                Details
                                            </a>
                                            <a href="@Url.Action("ViewApplications", "Employer", new { jobId = job.Id })"
                                               class="inline-flex items-center px-4 py-2 bg-purple-50 text-purple-700 rounded-lg hover:bg-purple-100 transition-colors duration-200 action-btn"
                                               title="View Applications">
                                                <i data-feather="users" class="w-4 h-4 mr-2"></i>
                                                Applications
                                            </a>
                                            <a href="@Url.Action("DeleteJob", "Employer", new { id = job.Id })"
                                               class="inline-flex items-center px-4 py-2 bg-red-50 text-red-700 rounded-lg hover:bg-red-100 transition-colors duration-200 action-btn"
                                               title="Delete Job"
                                               onclick="return confirm('Are you sure you want to delete this job?');">
                                                <i data-feather="trash-2" class="w-4 h-4 mr-2"></i>
                                                Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="table-cell text-center">
                                    <div class="flex flex-col items-center justify-center py-12">
                                        <div class="p-4 bg-gray-100 rounded-2xl mb-4">
                                            <i data-feather="briefcase" class="w-12 h-12 text-gray-400"></i>
                                        </div>
                                        <h3 class="text-lg font-semibold text-gray-600 mb-2">No jobs found</h3>
                                        <p class="text-gray-500 max-w-md">Create your first job posting to get started with hiring.</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        AOS.init({
            duration: 800,
            once: true
        });

        feather.replace();

        // Add interactive effects
        document.addEventListener('DOMContentLoaded', function () {
            const tableRows = document.querySelectorAll('.table-row-hover');

            tableRows.forEach(row => {
                row.addEventListener('mouseenter', function () {
                    this.style.boxShadow = '0 4px 12px rgba(0, 0, 0, 0.1)';
                });

                row.addEventListener('mouseleave', function () {
                    this.style.boxShadow = 'none';
                });
            });
        });
    </script>
</body>
</html>