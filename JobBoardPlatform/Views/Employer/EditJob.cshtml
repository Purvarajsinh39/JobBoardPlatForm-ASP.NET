@model JobBoardPlatform.Models.Job

@{
    ViewBag.Title = "Edit Job";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl w-full space-y-8 bg-white rounded-xl shadow-lg overflow-hidden p-8">
        <div class="text-center">
            <div class="flex justify-center mb-6">
                <i data-feather="edit-2" class="w-12 h-12 text-blue-500"></i>
            </div>
            <h2 class="text-3xl font-extrabold text-gray-900">Edit Job Posting</h2>
            <p class="mt-2 text-sm text-gray-600">Update your job details below</p>
        </div>

        @using (Html.BeginForm("Edit", "Employer", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.ImagePath)

            <div class="rounded-md shadow-sm space-y-4">
                <div>
                    <label for="Title" class="block text-sm font-medium text-gray-700 mb-1">Job Title</label>
                    @Html.TextBoxFor(model => model.Title, new { @class = "form-input appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" })
                </div>

                <div>
                    <label for="Description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-input appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm", rows = 6 })
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label for="Category" class="block text-sm font-medium text-gray-700 mb-1">Category</label>
                        @Html.TextBoxFor(model => model.Category, new { @class = "form-input appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" })
                    </div>
                    <div>
                        <label for="Location" class="block text-sm font-medium text-gray-700 mb-1">Location</label>
                        @Html.TextBoxFor(model => model.Location, new { @class = "form-input appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" })
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Current Image</label>
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <div class="flex items-center space-x-4">
                            <img src="@Url.Content(Model.ImagePath)" class="h-24 w-24 rounded-lg object-cover border border-gray-200" />
                            <span class="text-sm text-gray-500">Current job image</span>
                        </div>
                    }
                    else
                    {
                        <div class="flex items-center space-x-4">
                            <div class="h-24 w-24 rounded-lg bg-gray-100 flex items-center justify-center">
                                <i data-feather="image" class="w-8 h-8 text-gray-400"></i>
                            </div>
                            <span class="text-sm text-gray-500">No image uploaded</span>
                        </div>
                    }
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Upload New Image</label>
                    <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg">
                        <div class="space-y-1 text-center">
                            <div class="flex text-sm text-gray-600">
                                <label for="ImageFile" class="relative cursor-pointer bg-white rounded-md font-medium text-blue-600 hover:text-blue-500 focus-within:outline-none">
                                    <span>Upload a file</span>
                                    <input id="ImageFile" name="ImageFile" type="file" class="sr-only">
                                </label>
                                <p class="pl-1">or drag and drop</p>
                            </div>
                            <p class="text-xs text-gray-500">PNG, JPG up to 2MB</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex items-center justify-between space-x-4 pt-6">
                <a href="@Url.Action("Dashboard", "Employer")" class="w-1/2 flex items-center justify-center px-4 py-3 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all">
                    <i data-feather="x" class="w-4 h-4 mr-2"></i>
                    Cancel
                </a>
                <button type="submit" class="w-1/2 flex items-center justify-center px-4 py-3 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all">
                    <i data-feather="save" class="w-4 h-4 mr-2"></i>
                    Save Changes
                </button>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>AOS.init();</script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <script>feather.replace();</script>
}
