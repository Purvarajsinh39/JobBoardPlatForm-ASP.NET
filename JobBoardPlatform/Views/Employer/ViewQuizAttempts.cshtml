@model List<JobBoardPlatform.Models.QuizAttempt>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quiz Attempts - Employer Dashboard</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Feather Icons -->
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>

    <style>
        .glass-card {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }

        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .table-row-hover:hover {
            background: linear-gradient(90deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
            transform: translateX(4px);
            transition: all 0.3s ease;
        }

        .status-passed {
            background: linear-gradient(135deg, #10B981, #059669);
            color: white;
        }

        .status-failed {
            background: linear-gradient(135deg, #EF4444, #DC2626);
            color: white;
        }

        .score-high {
            color: #10B981;
            font-weight: bold;
        }

        .score-medium {
            color: #F59E0B;
            font-weight: bold;
        }

        .score-low {
            color: #EF4444;
            font-weight: bold;
        }

        .floating {
            animation: float 6s ease-in-out infinite;
        }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-10px);
            }
        }

        .pulse-animation {
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }
        }
    </style>
</head>
<body class="bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50 min-h-screen">

    <!-- Animated Background Elements -->
    <div class="fixed inset-0 overflow-hidden pointer-events-none">
        <div class="absolute -top-20 -right-20 w-40 h-40 bg-purple-200 rounded-full mix-blend-multiply filter blur-xl opacity-30 floating"></div>
        <div class="absolute -bottom-20 -left-20 w-40 h-40 bg-yellow-200 rounded-full mix-blend-multiply filter blur-xl opacity-30 floating" style="animation-delay: -2s;"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-40 h-40 bg-pink-200 rounded-full mix-blend-multiply filter blur-xl opacity-30 floating" style="animation-delay: -4s;"></div>
    </div>

    <!-- Header Section -->
    <div class="gradient-bg py-12 px-4 shadow-2xl relative overflow-hidden">
        <div class="absolute inset-0 bg-black opacity-10"></div>
        <div class="max-w-6xl mx-auto relative z-10">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-4xl md:text-5xl font-bold text-white mb-4 drop-shadow-2xl">
                        📊 Quiz Attempts
                    </h1>
                    <p class="text-xl text-white opacity-90 font-light">
                        Comprehensive overview of all quiz submissions for your job postings
                    </p>
                </div>
                <div class="hidden lg:block">
                    <div class="glass-card p-6 floating">
                        <i data-feather="clipboard" class="w-16 h-16 text-white"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-6xl mx-auto px-4 py-12 -mt-8 relative z-10">

        <!-- Summary Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <!-- Total Attempts -->
            <div class="glass-card p-6 text-center">
                <div class="w-12 h-12 bg-blue-500 rounded-2xl flex items-center justify-center mx-auto mb-3">
                    <i data-feather="clipboard" class="w-6 h-6 text-white"></i>
                </div>
                <div class="text-2xl font-bold text-gray-800 pulse-animation">@Model.Count</div>
                <p class="text-gray-600 text-sm">Total Attempts</p>
            </div>

            <!-- Passed -->
            <div class="glass-card p-6 text-center">
                <div class="w-12 h-12 bg-green-500 rounded-2xl flex items-center justify-center mx-auto mb-3">
                    <i data-feather="check" class="w-6 h-6 text-white"></i>
                </div>
                <div class="text-2xl font-bold text-gray-800 pulse-animation">
                    @Model.Count(a => a.Passed)
                </div>
                <p class="text-gray-600 text-sm">Passed</p>
            </div>

            <!-- Failed -->
            <div class="glass-card p-6 text-center">
                <div class="w-12 h-12 bg-red-500 rounded-2xl flex items-center justify-center mx-auto mb-3">
                    <i data-feather="x" class="w-6 h-6 text-white"></i>
                </div>
                <div class="text-2xl font-bold text-gray-800 pulse-animation">
                    @Model.Count(a => !a.Passed)
                </div>
                <p class="text-gray-600 text-sm">Failed</p>
            </div>

            <!-- Success Rate -->
            <div class="glass-card p-6 text-center">
                <div class="w-12 h-12 bg-purple-500 rounded-2xl flex items-center justify-center mx-auto mb-3">
                    <i data-feather="trending-up" class="w-6 h-6 text-white"></i>
                </div>
                <div class="text-2xl font-bold text-gray-800 pulse-animation">
                    @if (Model.Any())
                    {
                        var successRate = (Model.Count(a => a.Passed) * 100.0 / Model.Count).ToString("0");
                        @:@successRate%
                    }
                    else
                    {
                        @:0%
                    }
                </div>
                <p class="text-gray-600 text-sm">Success Rate</p>
            </div>
        </div>

        <!-- Main Table Container -->
        <div class="glass-card p-8">
            <div class="flex items-center justify-between mb-8">
                <h2 class="text-2xl font-bold text-gray-800 flex items-center">
                    <i data-feather="list" class="w-6 h-6 mr-3 text-purple-500"></i>
                    All Quiz Attempts
                </h2>
                <div class="flex items-center space-x-4">
                    <span class="px-4 py-2 bg-purple-100 text-purple-800 rounded-full text-sm font-medium">
                        @Model.Count Records
                    </span>
                </div>
            </div>

            @if (Model.Any())
            {
                <div class="overflow-hidden rounded-2xl border border-gray-200/50 shadow-lg">
                    <table class="w-full">
                        <thead>
                            <tr class="bg-gradient-to-r from-purple-50 to-blue-50">
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700 border-b border-gray-200/50">
                                    <div class="flex items-center">
                                        <i data-feather="briefcase" class="w-4 h-4 mr-2 text-purple-500"></i>
                                        Job Title
                                    </div>
                                </th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700 border-b border-gray-200/50">
                                    <div class="flex items-center">
                                        <i data-feather="user" class="w-4 h-4 mr-2 text-blue-500"></i>
                                        Seeker Name
                                    </div>
                                </th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700 border-b border-gray-200/50">
                                    <div class="flex items-center">
                                        <i data-feather="bar-chart" class="w-4 h-4 mr-2 text-green-500"></i>
                                        Score
                                    </div>
                                </th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700 border-b border-gray-200/50">
                                    <div class="flex items-center">
                                        <i data-feather="check-circle" class="w-4 h-4 mr-2 text-orange-500"></i>
                                        Status
                                    </div>
                                </th>
                                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700 border-b border-gray-200/50">
                                    <div class="flex items-center">
                                        <i data-feather="calendar" class="w-4 h-4 mr-2 text-red-500"></i>
                                        Attempt Date
                                    </div>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200/30">
                            @foreach (var attempt in Model)
                            {
                                <tr class="table-row-hover">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-gray-900">@attempt.JobTitle</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-700">@attempt.SeekerName</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        @{
                                            var scoreClass = attempt.Score >= 80 ? "score-high" :
                                                            attempt.Score >= 60 ? "score-medium" : "score-low";
                                        }
                                        <span class="text-sm font-semibold @scoreClass">
                                            @attempt.Score%
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold @(attempt.Passed ? "status-passed" : "status-failed")">
                                            <i data-feather="@(attempt.Passed ? "check" : "x")" class="w-3 h-3 mr-1"></i>
                                            @(attempt.Passed ? "Passed" : "Failed")
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-500">
                                            @attempt.AttemptDate.ToString("dd MMM yyyy")
                                        </div>
                                        <div class="text-xs text-gray-400">
                                            @attempt.AttemptDate.ToString("HH:mm")
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Table Footer -->
                <div class="mt-6 flex items-center justify-between text-sm text-gray-600">
                    <div class="flex items-center">
                        <i data-feather="info" class="w-4 h-4 mr-2"></i>
                        Showing @Model.Count quiz attempts
                    </div>
                    @*<div class="flex items-center space-x-4">
                        <button onclick="window.print()" class="flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg transition duration-200">
                            <i data-feather="printer" class="w-4 h-4 mr-2"></i>
                            Print
                        </button>
                    </div>*@
                </div>
            }
            else
            {
                <!-- Empty State -->
                <div class="text-center py-16">
                    <div class="w-24 h-24 bg-gray-200 rounded-full flex items-center justify-center mx-auto mb-6">
                        <i data-feather="clipboard" class="w-12 h-12 text-gray-400"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-600 mb-4">No Quiz Attempts Yet</h3>
                    <p class="text-gray-500 max-w-md mx-auto mb-8">
                        There are no quiz attempts recorded for your job postings yet.
                        This section will populate automatically once candidates start taking your quizzes.
                    </p>
                    <div class="flex justify-center space-x-4">
                        <button onclick="location.reload()" class="px-6 py-3 bg-gradient-to-r from-purple-500 to-pink-500 text-white rounded-xl font-semibold shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 flex items-center">
                            <i data-feather="refresh-cw" class="w-5 h-5 mr-2"></i>
                            Refresh Page
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>

    <script>
        // Initialize Feather Icons
        feather.replace();
    </script>
</body>
</html>