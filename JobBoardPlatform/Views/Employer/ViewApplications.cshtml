@model List<JobBoardPlatform.Models.Application>

@{
    ViewBag.Title = "My Job Applications";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var jobId = ViewBag.JobId;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Applications Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <style>
        .container-btn-download {
            display: flex;
            align-items: center;
            gap: 8px; /* equivalent to gap-2 (1 unit = 4px in Tailwind) */
            background-color: blue; /* a shade of green */
            color: white;
            padding: 8px 16px; /* equivalent to px-4 py-2 */
            border-radius: 8px; /* equivalent to rounded-lg */
            transition: all 0.2s ease-in-out;
        }

            .container-btn-download:hover {
                background-color: blue; /* a darker shade of green for the hover effect */
            }

        .status-badge {
            padding: 4px 12px; /* equivalent to px-3 py-1 */
            border-radius: 9999px; /* equivalent to rounded-full */
            font-size: 0.75rem; /* equivalent to text-xs */
            font-weight: 500; /* equivalent to font-medium */
        }
    </style>
</head>
<body class="bg-gray-50">
    <div class="container mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold text-gray-800">Applications Dashboard</h1>
            @*<div class="flex items-center space-x-4">
                <a href="@Url.Action("DownloadJobApplicationsExcel", "Employer", new { jobId = ViewBag.JobId })" class="container-btn-download">
                    <i data-feather="download"></i>
                    <span>Download Excel</span>
                </a>
            </div>*@
            <div class="flex space-x-4">
                <a href="@Url.Action("DownloadJobApplicationsExcel", "Employer",new { jobId = ViewBag.JobId })"
                   class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition flex items-center">
                    <i data-feather="download" class="mr-2"></i> Download Jobs
                </a>
            </div>
        </div>

        <!-- 🔍 Search and Filter Section -->
        <div class="bg-white rounded-xl shadow-sm p-6 mb-8" data-aos="fade-up">
            <form method="get" class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Search</label>
                    <div class="relative">
                        <i data-feather="search" class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                        <input type="text" name="searchTerm"
                               class="pl-10 w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring-blue-500"
                               placeholder="Candidate or job title"
                               value="@Request["searchTerm"]">
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                    <select name="statusFilter" class="w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring-blue-500">
                        <option value="">All Statuses</option>
                        <option value="Applied" @(Request["statusFilter"] == "Applied" ? "selected" : "")>Applied</option>
                        <option value="Approved" @(Request["statusFilter"] == "Approved" ? "selected" : "")>Approved</option>
                        <option value="Rejected" @(Request["statusFilter"] == "Rejected" ? "selected" : "")>Rejected</option>
                    </select>
                </div>

                <div class="flex items-end">
                    <button type="submit" class="w-full md:w-auto bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg transition-colors duration-200 flex items-center justify-center gap-2">
                        <i data-feather="filter"></i>
                        <span>Apply Filters</span>
                    </button>
                </div>
            </form>
        </div>

        <!-- 📋 Applications Table -->
        <div class="bg-white rounded-xl shadow-sm overflow-hidden" data-aos="fade-up" data-aos-delay="100">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Candidate</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Job Title</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Applied Date</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Resume</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @if (Model != null && Model.Any())
                        {
                            foreach (var app in Model)
                            {
                                <tr class="hover:bg-gray-50 transition-colors duration-150">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="flex-shrink-0 h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center">
                                                <i data-feather="user" class="text-blue-600"></i>
                                            </div>
                                            <div class="ml-4">
                                                <div class="text-sm font-medium text-gray-900">@app.CandidateName</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-sm text-gray-500">@app.JobTitle</td>
                                    <td class="px-6 py-4 text-sm text-gray-500">@app.AppliedDate.ToShortDateString()</td>
                                    <td class="px-6 py-4">
                                        <span class="status-badge @(app.Status == "Approved" ? "bg-green-100 text-green-800" : app.Status == "Rejected" ? "bg-red-100 text-red-800" : "bg-gray-100 text-gray-800")">
                                            @app.Status
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 text-sm text-gray-500">
                                        @if (!string.IsNullOrEmpty(app.ResumePath))
                                        {
                                            <a href="@Url.Content(app.ResumePath)" class="inline-flex items-center text-blue-600 hover:text-blue-800" download>
                                                <i data-feather="download" class="mr-1"></i>
                                                Download
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-gray-400">No Resume</span>
                                        }
                                    </td>
                                    <td class="px-6 py-4 text-sm font-medium">
                                        @if (app.Status == "Applied")
                                        {
                                            <div class="flex space-x-2">
                                                <a href="@Url.Action("ApproveApplication", "Employer", new { id = app.Id, jobId = jobId })" class="inline-flex items-center px-3 py-1 bg-green-100 text-green-800 rounded-full hover:bg-green-200 transition-colors duration-200">
                                                    <i data-feather="check" class="w-4 h-4 mr-1"></i>
                                                    Approve
                                                </a>
                                                <a href="@Url.Action("RejectApplication", "Employer", new { id = app.Id, jobId = jobId })" class="inline-flex items-center px-3 py-1 bg-red-100 text-red-800 rounded-full hover:bg-red-200 transition-colors duration-200">
                                                    <i data-feather="x" class="w-4 h-4 mr-1"></i>
                                                    Reject
                                                </a>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-gray-400">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="px-6 py-4 text-center text-gray-500">
                                    <div class="flex flex-col items-center justify-center py-12">
                                        <i data-feather="inbox" class="w-16 h-16 text-gray-400 mb-4"></i>
                                        <p class="text-lg text-gray-600">No applications found</p>
                                        <p class="text-sm text-gray-500">Try adjusting your search or filter criteria</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        AOS.init({
            duration: 600,
            easing: 'ease-in-out',
            once: true
        });
        feather.replace();
    </script>
</body>
</html>
