@model JobBoardPlatform.Models.Job

@{
    ViewBag.Title = "Post a Job";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <script src="https://unpkg.com/feather-icons"></script>
    <style>
        .gradient-bg {
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .form-card {
            backdrop-filter: blur(10px);
            background-color: rgba(255, 255, 255, 0.9);
        }

        .file-upload {
            position: relative;
            overflow: hidden;
        }

        .file-upload-input {
            position: absolute;
            top: 0;
            right: 0;
            margin: 0;
            padding: 0;
            font-size: 20px;
            cursor: pointer;
            opacity: 0;
            filter: alpha(opacity=0);
        }
    </style>
</head>
<body class="min-h-screen gradient-bg">
    <div class="max-w-4xl mx-auto py-12 px-6">
        <div class="w-full bg-white rounded-xl shadow-2xl p-8" data-aos="fade-up">
            <div class="flex items-center justify-between mb-8">
                <h2 class="text-3xl font-bold text-gray-800">
                    <i data-feather="plus-circle" class="inline mr-2"></i>
                    Post a Job
                </h2>
                <div class="w-12 h-12 rounded-full bg-indigo-100 flex items-center justify-center">
                    <i data-feather="briefcase" class="text-indigo-600"></i>
                </div>
            </div>

            @using (Html.BeginForm("PostJob", "Employer", FormMethod.Post, new { enctype = "multipart/form-data", @class = "space-y-6" }))
            {
                <div>
                    <label class="block text-gray-700 font-medium mb-2" for="Title">
                        <i data-feather="type" class="inline mr-2"></i>
                        Job Title
                    </label>
                    @Html.TextBoxFor(model => model.Title, new { @class = "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200", placeholder = "Enter job title" })
                </div>

                <div>
                    <label class="block text-gray-700 font-medium mb-2" for="Description">
                        <i data-feather="align-left" class="inline mr-2"></i>
                        Description
                    </label>
                    @Html.TextAreaFor(model => model.Description, new { @class = "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200", rows = 4, placeholder = "Describe the job position" })
                </div>

                <div>
                    <label class="block text-gray-700 font-medium mb-2" for="Category">
                        <i data-feather="tag" class="inline mr-2"></i>
                        Category
                    </label>
                    @Html.TextBoxFor(model => model.Category, new { @class = "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200", placeholder = "e.g. Software Development, Marketing" })
                </div>

                <div>
                    <label class="block text-gray-700 font-medium mb-2" for="Location">
                        <i data-feather="map-pin" class="inline mr-2"></i>
                        Location
                    </label>
                    @Html.TextBoxFor(model => model.Location, new { @class = "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200", placeholder = "Where is the job located?" })
                </div>

                <div>
                    <label class="block text-gray-700 font-medium mb-2">
                        <i data-feather="image" class="inline mr-2"></i>
                        Company Image (Optional)
                    </label>
                    <div class="file-upload flex items-center justify-center w-full">
                        <label for="ImageFile" class="flex flex-col items-center justify-center w-full h-32 border-2 border-dashed border-gray-300 rounded-lg cursor-pointer bg-gray-50 hover:bg-gray-100 transition duration-200">
                            <div class="flex flex-col items-center justify-center pt-5 pb-6">
                                <i data-feather="upload" class="w-8 h-8 mb-3 text-gray-500"></i>
                                <p class="mb-2 text-sm text-gray-500">Click to upload or drag and drop</p>
                                <p class="text-xs text-gray-500">PNG, JPG (MAX. 5MB)</p>
                            </div>
                            <input id="ImageFile" name="ImageFile" type="file" class="file-upload-input" />
                        </label>
                    </div>
                </div>

                <div class="pt-4">
                    <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-4 rounded-lg transition duration-200 flex items-center justify-center">
                        <i data-feather="send" class="mr-2"></i>
                        Submit Job
                    </button>
                </div>
            }
        </div>
    </div>

    <script>
        AOS.init();
        feather.replace();

        // File upload preview
        document.getElementById('ImageFile').addEventListener('change', function (e) {
            const fileName = e.target.files[0]?.name || 'No file chosen';
            const uploadText = document.querySelector('.file-upload p:first-of-type');
            if (uploadText) {
                uploadText.textContent = fileName;
            }
        });
    </script>
</body>
</html>
