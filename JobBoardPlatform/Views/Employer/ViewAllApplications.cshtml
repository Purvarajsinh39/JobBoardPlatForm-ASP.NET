                        <span class="font-medium">Download Excel</span>
                    </a>
                </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8" data-aos="fade-up">
                <div class="stat-card rounded-2xl p-6 text-white hover-lift">
                    <div class="flex justify-between items-center relative z-10">
                        <div>
                            <p class="text-sm font-medium opacity-90">Total Applications</p>
                            <h3 class="text-3xl font-bold mt-2">@Model.Count</h3>
                        </div>
                        <div class="p-3 rounded-2xl bg-white bg-opacity-20">
                            <i data-feather="users" class="w-6 h-6"></i>
                        </div>
                    </div>
                </div>

                <div class="stat-card rounded-2xl p-6 text-white hover-lift" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                    <div class="flex justify-between items-center relative z-10">
                        <div>
                            <p class="text-sm font-medium opacity-90">Approved</p>
                            <h3 class="text-3xl font-bold mt-2">@Model.Count(a => a.Status == "Approved")</h3>
                        </div>
                        <div class="p-3 rounded-2xl bg-white bg-opacity-20">
                            <i data-feather="check-circle" class="w-6 h-6"></i>
                        </div>
                    </div>
                </div>

                <div class="stat-card rounded-2xl p-6 text-white hover-lift" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
                    <div class="flex justify-between items-center relative z-10">
                        <div>
                            <p class="text-sm font-medium opacity-90">Pending</p>
                            <h3 class="text-3xl font-bold mt-2">@Model.Count(a => a.Status == "Applied")</h3>
                        </div>
                        <div class="p-3 rounded-2xl bg-white bg-opacity-20">
                            <i data-feather="clock" class="w-6 h-6"></i>
                        </div>
                    </div>
                </div>

                <div class="stat-card rounded-2xl p-6 text-white hover-lift" style="background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);">
                    <div class="flex justify-between items-center relative z-10">
                        <div>
                            <p class="text-sm font-medium opacity-90">Rejected</p>
                            <h3 class="text-3xl font-bold mt-2">@Model.Count(a => a.Status == "Rejected")</h3>
                        </div>
                        <div class="p-3 rounded-2xl bg-white bg-opacity-20">
                            <i data-feather="x-circle" class="w-6 h-6"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Search Section -->
            <div class="glass-card rounded-2xl p-6 mb-8 shadow-lg search-box" data-aos="fade-up" data-aos-delay="100">
                <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
                    <i data-feather="filter" class="w-5 h-5 mr-2 text-blue-600"></i>
                    Filter Applications
                </h2>
                @using (Html.BeginForm("ViewAllApplications", "Employer", FormMethod.Get))
                {
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div class="md:col-span-2">
                            <div class="relative">
                                <i data-feather="search" class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                                <input type="text" name="searchTerm"
                                       class="w-full pl-12 pr-4 py-3 border-0 rounded-xl focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm"
                                       placeholder="Search by candidate name or job title..."
                                       value="@ViewBag.SearchTerm"/>
                            </div>
                        </div>
                        <div>
                            <select name="statusFilter"
                                    class="w-full px-4 py-3 border-0 rounded-xl focus:ring-2 focus:ring-blue-500 focus:outline-none shadow-sm">
                                <option value="">All Statuses</option>
                                <option value="Applied" @(ViewBag.StatusFilter == "Applied" ? "selected" : "")>Applied</option>
                                <option value="Approved" @(ViewBag.StatusFilter == "Approved" ? "selected" : "")>Approved</option>
                                <option value="Rejected" @(ViewBag.StatusFilter == "Rejected" ? "selected" : "")>Rejected</option>
                            </select>
                        </div>
                        <div class="md:col-span-3 flex justify-end">
                            <button type="submit"
                                    class="px-8 py-3 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white rounded-xl transition-all duration-300 font-medium flex items-center justify-center gap-2 shadow-lg hover:shadow-xl">
                                <i data-feather="filter" class="w-4 h-4"></i>
                                Apply Filters
                            </button>
                        </div>
                    </div>
                }
            </div>

            <!-- Applications Table -->
            <div class="glass-card rounded-2xl shadow-lg overflow-hidden" data-aos="fade-up" data-aos-delay="200">
                <div class="px-6 py-4 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-blue-50">
                    <h2 class="text-xl font-bold text-gray-800 flex items-center">
                        <i data-feather="list" class="w-5 h-5 mr-2 text-blue-600"></i>
                        All Applications
                        <span class="ml-2 px-3 py-1 bg-blue-100 text-blue-800 text-sm font-medium rounded-full">
                            @Model.Count applications
                        </span>
                    </h2>
                </div>

                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Candidate</th>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Job Title</th>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Employer</th>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Applied Date</th>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</th>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Resume</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var app in Model)
                            {
                                <tr class="table-row-hover">
                                    <td class="px-6 py-5 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="flex-shrink-0 h-12 w-12 rounded-full bg-gradient-to-r from-blue-500 to-purple-500 flex items-center justify-center shadow-sm">
                                                <i data-feather="user" class="w-6 h-6 text-white"></i>
                                            </div>
                                            <div class="ml-4">
                                                <div class="text-sm font-semibold text-gray-900">@app.CandidateName</div>
                                                <div class="text-sm text-gray-500">Applicant</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-5">
                                        <div class="text-sm font-medium text-gray-900">@app.JobTitle</div>
                                    </td>
                                    <td class="px-6 py-5">
                                        <div class="text-sm text-gray-700">@app.EmployerName</div>
                                    </td>
                                    <td class="px-6 py-5 whitespace-nowrap">
                                        <div class="text-sm text-gray-700 flex items-center">
                                            <i data-feather="calendar" class="w-4 h-4 mr-2 text-gray-400"></i>
                                            @app.AppliedDate.ToString("dd-MM-yyyy")
                                        </div>
                                    </td>
                                    <td class="px-6 py-5 whitespace-nowrap">
                                        @if (app.Status == "Applied")
                                        {
                                            <span class="status-badge bg-yellow-100 text-yellow-800 border border-yellow-200">Applied</span>
                                        }
                                        else if (app.Status == "Approved")
                                        {
                                            <span class="status-badge bg-green-100 text-green-800 border border-green-200">Approved</span>
                                        }
                                        else if (app.Status == "Rejected")
                                        {
                                            <span class="status-badge bg-red-100 text-red-800 border border-red-200">Rejected</span>
                                        }
                                    </td>
                                    <td class="px-6 py-5 whitespace-nowrap">
                                        @if (!string.IsNullOrEmpty(app.ResumePath))
                                        {
                                            <a href="@Url.Content(app.ResumePath)"
                                               class="inline-flex items-center px-4 py-2 bg-blue-50 text-blue-700 rounded-lg hover:bg-blue-100 transition-colors duration-200 action-btn"
                                               download>
                                                <i data-feather="download" class="w-4 h-4 mr-2"></i>
                                                Download
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="inline-flex items-center px-3 py-1 bg-gray-100 text-gray-500 rounded-lg">
                                                <i data-feather="file" class="w-4 h-4 mr-2"></i>
                                                No Resume
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            @if (!Model.Any())
            {
                <div class="glass-card rounded-2xl p-12 text-center" data-aos="fade-up">
                    <div class="mx-auto w-24 h-24 bg-gray-100 rounded-3xl flex items-center justify-center mb-6">
                        <i data-feather="file-text" class="w-12 h-12 text-gray-400"></i>
                    </div>
                    <h3 class="text-2xl font-semibold text-gray-600 mb-4">No Applications Found</h3>
                    <p class="text-gray-500 mb-8 max-w-md mx-auto">
                        No job applications match your current search criteria. Try adjusting your filters to see more results.
                    </p>
                </div>
            }
        </div>
    </div>

    <script>
        AOS.init({
            duration: 800,
            once: true
        });

        feather.replace();

        // Add interactive effects
        document.addEventListener('DOMContentLoaded', function () {
            const tableRows = document.querySelectorAll('.table-row-hover');

            tableRows.forEach(row => {
                row.addEventListener('mouseenter', function () {
                    this.style.boxShadow = '0 4px 12px rgba(0, 0, 0, 0.1)';
                });

                row.addEventListener('mouseleave', function () {
                    this.style.boxShadow = 'none';
                });
            });
        });
    </script>
</body>
</html>