@{
    ViewBag.Title = "Login";
}
<h2>Login</h2>
@using (Html.BeginForm())
{
    <p>Email: <input type="email" name="email" /></p>
    <p>Password: <input type="password" name="password" /></p>
    <button type="submit">Login</button>
}
@if (ViewBag.Error != null)
{
    <p style="color:red;">@ViewBag.Error</p>
}
